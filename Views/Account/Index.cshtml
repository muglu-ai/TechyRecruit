@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Application Roles";
    Layout = "_Layout";
}

<h2>View Roles</h2>
<p>
    <a asp-action="Create">Create New Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
<tbody>
@foreach (var role in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => role.Name)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
        </td>
    </tr>
}
</tbody>
</table>
